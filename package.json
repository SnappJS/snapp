{
  "name": "@snappjs/core",
  "version": "3.0.0",
  "description": "A lightweight JSX-like framework for vanilla JavaScript with full TypeScript support",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch"
  },
  "keywords": [
    "framework",
    "jsx",
    "frontend",
    "reactive",
    "typescript",
    "dom",
    "vanilla-js",
    "lightweight"
  ],
  "author": "kigemmanuel",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SnappJS/snapp.git"
  },
  "bugs": {
    "url": "https://github.com/SnappJS/snapp/issues"
  },
  "homepage": "https://github.com/SnappJS/snapp",
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
